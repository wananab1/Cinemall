<div class="container">
	<div class="mi_main">
		<h2 class="mi_title">作品一覧</h2>
		<% @movies.each do |m| %>
			<div class="mi_moviebox">
				<div class="mi_image">
					<%= link_to movie_path(m.id) do %>
						<%= attachment_image_tag m, :movie_image, format: 'jpeg', :size => '90x120' %>
					<% end %>
				</div>
				<div class="mi_box1">
					<h5>
						<%= link_to m.j_title, movie_path(m.id), class: "mi_j_title" %>
					</h5>
					<p class="mi_e_title"><%= m.e_title %></p>
				</div>
				<div class="mi_box2">
					<p class="mi_p">ジャンル：<%= m.genre.genre_name %></p>
					<p class="mi_p">配給会社：<%= m.company.company_name %></p>
					<p class="mi_p">製作国：<%= m.country.country_name %></p>
				</div>
				<div class="mi_box3">
					<p class="mi_p">上映時間：<%= m.time %>分</p>
					<p class="mi_p">公開日：<%= m.release %></p>
				</div>
				<div class="mi_box4">
					<p class="mi_p"><%= link_to '作品情報編集', edit_admins_movie_path(m.id), class: 'mi_link' %></p>
					<p class="mi_p"><%= link_to 'キャスト編集', new_admins_movie_cast_path(m.id), class: 'mi_link' %></p>
					<p class="mi_p"><%= link_to '削除', admins_movie_path(m.id), method: :delete, class: 'btn btn-outline-danger btn-sm mi-delete', data: {confirm: "この作品を削除しますか？"} %></p>
				</div>
			</div>
		<% end %>
	</div>
</div>

