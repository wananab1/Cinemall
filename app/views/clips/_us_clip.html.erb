<% @clips = Clip.where(movie_id: movie.id) %>
<% if movie.clipped_by?(current_user) %>
	<%= link_to movie_us_clips_path(movie), remote: true, method: :delete do %>
		<div class="us_icon_box us_icon_box2 clipped_us_icon_box">
			<div>
				<%= fa_icon("paperclip") %>
			</div>
			<span><%= movie.clips.count %></span>
		</div>
	<% end %>
<% else %>
	<%= link_to movie_us_clips_path(movie), remote: true, method: :post do %>
		<div class="us_icon_box us_icon_box2">
			<div>
				<%= fa_icon("paperclip") %>
			</div>
			<span><%= movie.clips.count %></span>
		</div>
	<% end %>
<% end %>