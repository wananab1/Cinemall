<% if review.liked_by?(current_user) %>
	<span class="iine">
		<%= link_to fa_icon("heart"), review_likes_path(review), remote: true, method: :delete %> 
		<% unless review.likes.count == 0 %>
			<%= review.likes.count %> 
		<% end %>
		イイね！
	</span>
<% else %>
	<span class="uniine">
		<%= link_to fa_icon("heart"), review_likes_path(review), remote: true ,method: :post %> 
		<% unless review.likes.count == 0 %>
			<%= review.likes.count %> 
		<% end %>
		イイね！
	</span>
<% end %>