<div class="container">
	<!-- modal -->
		<!-- すでにレビューがある場合 -->
	<% if @user_review.present? %>
	<div class="modal_back" id="review_modal">
		<div class="ms_modal">
			<div class="ms_modal_top">
				<div class="ms_modal_close">
					<span class="modal_close_btn" id="modal_close_btn">
						<%= fa_icon("times-circle") %>
					</span>
				</div>
				<h4 class="ms_modal_title">
					「<%= @movie.j_title %>」<%= @user_review.score%>のレビュー
				</h4>
			</div>
			<div class="ms_review_form">
				<%= form_for [@movie, @user_review] do |f|%>
				<div class="modal-score">
					<span class="modal_span">スコア</span>
					<div class="modal_star">
						<div id='star-rating'></div>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :comment, '感想' %>
					<%= f.text_area :comment , class: 'form-control', rows: 10  %>
				</div>
				<div class="form-group">
					<%= f.check_box :secret,{}, "true", "false"  %>
					<%= f.label :secret, 'ネタバレあり' %>
				</div>
				<div class="form-group ms_modal_submit">
					<%= link_to '削除', movie_review_path(@movie, @user_review), method: :delete, class: 'btn btn-danger modal_bottom_btn', data: {confirm: "レビューを削除しますか？"}  %>
					<%= f.submit '更新', class: 'btn btn-primary modal_bottom_btn'%>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<!-- js -->
	<script>
		$('#star-rating').raty({
			half:        true,
			halfShow:    true,
			path: '/assets/',
			score: <%= @user_review.score %>,
		});
	</script>
		<!-- レビューが存在しない場合 -->
	<% else %>
	<div class="modal_back" id="review_modal">
		<div class="ms_modal">
			<div class="ms_modal_top">
				<div class="ms_modal_close">
					<span class="modal_close_btn" id="modal_close_btn">
						<%= fa_icon("times-circle") %>
					</span>
				</div>
				<h4 class="ms_modal_title">
					「<%= @movie.j_title %>」のレビュー
				</h4>
			</div>
			<div class="ms_review_form">
				<%= form_for [@movie, @review] do |f|%>
				<div class="modal-score">
					<span class="modal_span">スコア</span>
					<div class="modal_star">
						<div id='star-rating'></div>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :comment, '感想' %>
					<%= f.text_area :comment , class: 'form-control', rows: 10  %>
				</div>
				<div class="form-group">
					<%= f.check_box :secret,{}, "true", "false"  %>
					<%= f.label :secret, 'ネタバレあり' %>
				</div>
				<div class="form-group ms_modal_submit">
					<%= f.submit '投稿', class: 'btn btn-primary modal_bottom_btn'%>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<!-- js -->
	<script>
		$('#star-rating').raty({
			half:        true,
			halfShow:    true,
			path: '/assets/',
		});
	</script>
	<% end %>
	<!-- modal end -->

	<div class="ms_top">
		<div class="row">
			<div class="col-3 ms_top_1">
				<div class="ms_image">
					<%= attachment_image_tag @movie, :movie_image, format: 'jpeg', :size => '257x342' %>
				</div>
				<div class="ms_icons clearfix">
					<% if user_signed_in? %>
					<div class="ms_icon_box ms_icon_box1" id="ms_review_create">
						<div>
							<%= fa_icon("eye") %>
						</div>
						<p class="ms_icon_p">12</p>
					</div>
					<div class="ms_icon_box ms_icon_box2">
						<div>
							<%= fa_icon("paperclip") %>
						</div>
						<p class="ms_icon_p">39</p>
					</div>
					<% else %>
						<%= link_to new_user_session_path do %>
						<div class="ms_icon_box ms_icon_box1">
							<div>
								<%= fa_icon("eye") %>
							</div>
							<p class="ms_icon_p">12</p>
						</div>
						<% end %>
						<%= link_to new_user_session_path do %>
						<div class="ms_icon_box ms_icon_box2">
							<div>
								<%= fa_icon("paperclip") %>
							</div>
							<p class="ms_icon_p">39</p>
						</div>
						<% end %>
					<% end %>
				</div>
			</div>
			<div class="col-9 ms_top_2">
				<div class="ms_top_2box">
					<h2 class="ms_j_title"><%= @movie.j_title %></h2>
					<p class="ms_e_title"><%= @movie.e_title %></p>
					<div class="ms_star">
						<span class="rate rate4-5"></span>
						<span class="ms_score">4.6</span>
					</div>
				</div>
				<div class="ms_top_2box">
					<div>
						<h5 class="mn_h5">あらすじ</h5>
						<p class="summary_all"><%= @movie.summary %></p>
						<p class="summary_limit"><%= @movie.summary.truncate(150) %></p>
						<% if @movie.summary.length > 150 %>
						<span class="ms_show_all" id="ms_show_all_s">▽つづきを読む</span>
						<% end %>
					</div>
				</div>
				<div class="row ms_top_2box">
					<div class="col-6 ms_bottom_box">
						<table class="table table-bordered ms_cast_table">
							<% if @director.present? %>
							<tbody>
								<!-- 監督 -->
								<tr>
									<td class="ds_td">監督</td>
									<td><%= @director.person.person_name %></td>
								</tr>
								<% @directors.each do |d| %>
								<tr>
									<td class="ds_td"></td>
									<td><%= d.person.person_name %></td>
								</tr>
								<% end %>
							</tbody>
							<%end%>
								<!-- 脚本 -->
							<% if @scenario.present? %>
							<tbody>
								<tr>
									<td class="ds_td">脚本</td>
									<td><%= @scenario.person.person_name %></td>
								</tr>
								<% @scenarios.each do |s| %>
								<tr>
									<td class="ds_td"></td>
									<td><%= s.person.person_name %></td>
								</tr>
								<% end %>
							</tbody>
							<% end %>
								<!-- 出演者　すべて -->
							<% if @actor.present? %>
							<tbody class="ms_actor_all">
								<tr>
									<td class="a_td">出演者</td>
									<td><%= @actor.person.person_name %></td>
								</tr>
								<% @actors_all.each do |a| %>
								<tr>
									<td class="a_td"></td>
									<td><%= a.person.person_name %></td>
								</tr>
								<% end %>
							</tbody>
								<!-- 出演者 リミット-->
							<tbody class="ms_actor_limit">
								<tr>
									<td class="a_td">出演者</td>
									<td><%= @actor.person.person_name %></td>
								</tr>
								<% @actors_limit.each do |a| %>
								<tr>
									<td class="a_td"></td>
									<td><%= a.person.person_name %></td>
								</tr>
								<% end %>
							</tbody>
							<% end %>
						</table>
						<% if @cast_count >= 7 %>
						<p class="ms_show_all" id="ms_show_all">▽すべて表示する</p>
						<p class="ms_hide" id="ms_hide">△もとに戻す</p>
						<% end %>
					</div>
					<div class="col-6 ms_bottom_box ms_bottom_box_right">
						<div class="ms_info_box">
							<table class="table table-borderless">
								<tbody>
									<tr>
										<td class="ms_info_td">ジャンル</td>
										<td><span>:</span> <%= @movie.genre.genre_name %></td>
									</tr>
									<tr>
										<td class="ms_info_td">配給会社</td>
										<td><span>:</span> <%= @movie.company.company_name %></td>
									</tr>
									<tr>
										<td class="ms_info_td">製作国</td>
										<td><span>:</span> <%= @movie.country.country_name %></td>
									</tr>
									<tr>
										<td class="ms_info_td">上映時間</td>
										<td><span>:</span> <%= @movie.time %>分</td>
									</tr>
									<tr>
										<td class="ms_info_td">公開日</td>
										<td><span>:</span> <%= @movie.release %></td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<% unless @movie.trailer_id.blank? %>
				<div class="ms_trailer_box">
					<h5 class="mn_h5">予告映像</h5>
					<%= movie(movie: @movie.trailer_id) %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="ms_reivew">
		
	</div>
</div>
