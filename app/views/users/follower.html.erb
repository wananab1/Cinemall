<%= render 'users/userinfo', user: @user %>
<div class="container-fulid us_main_container_fulid">
	<div class="container us_main_container clearfix">
		<h2 class="fol_title">Follower</h2>
		<div class="fl_mypage">
			<%= link_to user_path(@user) do %>
				<% if user_signed_in? %>
					<% if @user.id == current_user.id %>
						<%= fa_icon("angle-double-left")%>マイページへ
					<% else %>
						<%= fa_icon("angle-double-left")%>ユーザーページへ
					<% end %>
				<% else %>
							<%= fa_icon("angle-double-left")%>ユーザーページへ
				<% end %>
			<% end %>
		</div>
		<% @user.followers.each do |f|%>
			<div class="fol_userbox">
				<div class="fol_userbox_item1 clearfix">
					<%= link_to user_path(f) do %>
					<%= attachment_image_tag f, :profile_image, format: 'jpeg', :size => '80x80', fallback: 'no_profile_image.jpg', class: "fol_userimg" %>
					<% end %>
					<h5 class="fol_username"><%= f.user_name %></h5>
				</div>
				<div class="fol_userbox_item2 clearfix">
					<div class="fol_f_box">
						<div>follow</div>
						<span><%= f.followings.count %></span>
					</div>
					<div class="fol_f_box">
						<div>follower</div>
						<span><%= f.followers.count %></span>
					</div>
					<div class="fol_rc_box">
						<div>watch <%= fa_icon("eye") %></div>
						<span><%= f.reviews.count %></span>
					</div>
					<div class="fol_rc_box">
						<div>clip <%= fa_icon("paperclip") %></div>
						<span><%= f.clips.count %></span>
					</div>
				</div>
				<div class="fol_userbox_item3">
					<%= link_to user_path(f) do %>
						<%= fa_icon("angle-double-right")%><%= fa_icon("user")%>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
