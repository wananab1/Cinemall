<div class="container">
  <div class="signup-main">
    <h1 class="login-title">新規登録</h1>
    <div class="signup-form">
      <% if @user.errors.any? %>
        <div id="error_explanation" class=" alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :user_name, 'ユーザーネーム' %><br />
          <%= f.text_field :user_name, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'User name' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'パスワード(６文字以上)' %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password'%>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード確認' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'password confirmation' %>
        </div>
        <div class="actions sf-btn">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
        </div>
        <% end %>
         <div class="devise_bottom">
          <span><%= link_to ">>会員登録済みの方" ,new_user_session_path%></span>
        </div>
    </div>
  </div>
</div>




